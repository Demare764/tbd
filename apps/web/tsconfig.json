{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "eslint.config.mjs",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
